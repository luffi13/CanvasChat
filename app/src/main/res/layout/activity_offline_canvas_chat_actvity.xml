<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_offline_canvas_chat_actvity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.luffiadityasandy.canvaschat.activity.OfflineCanvasChatActvity">


    <android.support.v7.widget.RecyclerView
        android:background="#ededed"
        android:id="@+id/messageList_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/message_rl"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        >
        <android.support.design.widget.FloatingActionButton
            app:rippleColor="@android:color/holo_blue_dark"
            android:backgroundTint="@android:color/white"
            android:src="@mipmap/text_button"
            android:tint="@android:color/black"
            android:layout_width="wrap_content"
            app:borderWidth="0dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content" />
        <android.support.design.widget.FloatingActionButton
            app:rippleColor="@android:color/holo_blue_dark"
            android:backgroundTint="@android:color/white"
            android:src="@mipmap/share_button"
            android:layout_width="wrap_content"
            app:borderWidth="0dp"
            android:tint="@android:color/black"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content" />
        <android.support.design.widget.FloatingActionButton
            app:rippleColor="@android:color/holo_blue_dark"
            android:backgroundTint="@android:color/white"
            android:src="@mipmap/brush"
            android:layout_width="wrap_content"
            app:borderWidth="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/message_rl"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/createCanvas_btn"
                android:layout_gravity="bottom"
                android:padding="10dp"
                android:src="@mipmap/left_arrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/textMessage_et"
                android:hint="type here ......"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/sendText_btn"
                android:padding="7dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/send"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>
