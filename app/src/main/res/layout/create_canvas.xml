<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luffiadityasandy.canvaschat.activity.ShareableCanvasActivity">


    <LinearLayout
        android:id="@+id/myCanvas"
        android:layout_below="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"/>
    <RelativeLayout
        android:id="@+id/shapePicker_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:background="@mipmap/shape_picker_layout"
        >



        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/rectangle_btn"
                    android:layout_column="1"
                    app:border_color="@android:color/black"
                    android:padding="3dp"
                    app:border_width="1dp"
                    android:src="@mipmap/rectangle"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_btn"
                    android:layout_column="2"
                    app:border_color="@android:color/black"
                    android:padding="3dp"
                    app:border_width="1dp"
                    android:src="@mipmap/circle"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/line_btn"
                    android:layout_column="3"
                    app:border_color="@android:color/black"
                    android:padding="3dp"
                    app:border_width="1dp"
                    android:src="@mipmap/line"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/freehand_btn"
                    android:layout_column="4"
                    app:border_color="@android:color/black"
                    android:padding="3dp"
                    app:border_width="1dp"
                    android:src="@mipmap/freehand"
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    />


            </TableRow>
        </TableLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/colorPicker_layout"
        android:layout_width="wrap_content"
        android:background="@mipmap/color_picker_layout"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        >

        <TableLayout
            android:id="@+id/basicColor_tl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/colorPicker_btn"
                    android:layout_column="4"
                    android:minHeight="32dp"
                    android:src="@android:color/holo_blue_dark"
                    android:minWidth="32dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/yellowButton"
                    android:layout_column="3"
                    android:minHeight="32dp"
                    android:minWidth="32dp"
                    android:src="#ffff02"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/redButton"
                    android:layout_column="2"
                    android:minHeight="32dp"
                    android:minWidth="32dp"
                    android:src="@android:color/holo_red_dark"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/blackButton"
                    android:layout_column="1"
                    android:minHeight="32dp"
                    android:minWidth="32dp"
                    android:src="@android:color/black"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />


            </TableRow>
        </TableLayout>


    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/undo_btn"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:minHeight="48dp"
        android:minWidth="48dp"
        app:border_width="3dp"
        app:border_color="@android:color/black"
        android:src="@mipmap/undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/redo_btn"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@+id/undo_btn"
        android:layout_alignParentBottom="true"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:src="@mipmap/redo"
        app:border_width="3dp"
        app:border_color="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/send_btn"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/redo_btn"
        android:layout_alignParentBottom="true"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:src="@android:drawable/ic_menu_send"
        app:border_width="3dp"
        app:border_color="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/currentColor_btn"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:src="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/currentShape_btn"
        android:minHeight="48dp"
        android:minWidth="48dp"
        app:border_width="3dp"
        app:border_color="@android:color/black"
        android:src="@mipmap/shapes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/currentColor_btn"
        android:layout_alignStart="@+id/currentColor_btn" />


</RelativeLayout>
