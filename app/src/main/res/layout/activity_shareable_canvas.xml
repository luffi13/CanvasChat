<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shareable_canvas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luffiadityasandy.canvaschat.activity.ShareableCanvasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/myCanvas"
        android:orientation="horizontal"
        android:padding="12dp"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/line_btn"
                app:borderWidth="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@android:color/white"
                android:src="@mipmap/line"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/rectangle_btn"
                app:borderWidth="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@android:color/white"
                android:src="@mipmap/rectangle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/circle_btn"
                app:borderWidth="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@android:color/white"
                android:src="@mipmap/circle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/freehand_btn"
                app:borderWidth="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@android:color/white"
                android:src="@mipmap/freehand"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/myCanvas"
        android:layout_width="match_parent"
        android:minHeight="350dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:background="@android:color/white"/>


    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/undo_btn"
            app:border_width="3dp"
            android:padding="6dp"
            app:border_color="@android:color/black"
            android:src="@mipmap/undo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/redo_btn"
            app:border_width="3dp"
            android:padding="6dp"
            app:border_color="@android:color/black"
            android:src="@mipmap/redo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/blackButton"
            app:border_width="3dp"
            app:border_color="@android:color/black"
            android:layout_width="0dp"
            android:src="@android:color/black"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="3dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/redButton"
            app:border_width="3dp"
            app:border_color="@android:color/holo_red_dark"
            android:layout_width="0dp"
            android:src="@android:color/holo_red_dark"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="3dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/yellowButton"
            app:border_width="3dp"
            app:border_color="#ffff02"
            android:layout_width="0dp"
            android:src="#ffff02"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="3dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/colorPicker_btn"
            android:layout_width="0dp"
            android:src="@android:color/holo_blue_bright"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="3dp"/>

    </LinearLayout>




